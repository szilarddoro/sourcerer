{
  "$schema": "https://json.schemastore.org/eslintrc",
  "root": true,
  "extends": ["eslint:recommended"],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": false,
    "ecmaFeatures": {
      "globalReturn": false
    },
    "requireConfigFile": false
  },
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "no-useless-return": ["error"],
    "no-empty": ["error"],
    "no-console": ["warn"],
    "no-unused-vars": ["error"]
  }
}
